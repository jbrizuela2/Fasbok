<h1> <%= @post.title %> </h1>
<b> <%= @post.likes %> likes </b>

<p> <%= @post.content %> </p>

<%# Safe navigation operator %>
<%# <b> Autor: <%= @post.user ? @post.user.email : "Anonimo" </b> <br/> %>
<b> Autor: <%= @post.user&.email || "Anonimo" %> </b> <br/>

<% if @post.user == current_user %>
  <%= link_to("Editar este post", edit_post_path(@post)) %>

  <%= link_to "Eliminar", post_path(@post),  method: "delete" %>
<% end %>
